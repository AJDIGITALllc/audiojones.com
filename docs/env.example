# Audio Jones Environment Variables Template
# Copy this to .env.local and fill in the actual values

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"

# Admin Authentication
ADMIN_KEY=your-secure-admin-key-here

# Whop Integration
WHOP_API_KEY=your-whop-api-key
WHOP_APP_ID=your-whop-app-id
WHOP_WEBHOOK_SECRET=your-whop-webhook-secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_or_test_key
STRIPE_PUBLISHABLE_KEY=pk_live_or_test_key
STRIPE_WEBHOOK_SECRET=whsec_webhook_secret

# MailerLite
MAILERLITE_API_KEY=your-mailerlite-api-key

# ImageKit
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-id

# N8N Automation
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your-n8n-api-key

# Status Change Webhooks (comma-separated URLs)
STATUS_WEBHOOK_URLS=https://hooks.zapier.com/hooks/catch/your-zap,https://your-webhook-endpoint.com/status

# Webhook Security
# Shared secret for verifying Audio Jones webhooks (if receiving AJ webhooks)
AJ_WEBHOOK_SHARED_SECRET=your-shared-webhook-secret-32-chars-min

# Next.js
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://yourdomain.com
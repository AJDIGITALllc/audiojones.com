rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Authenticated users can write into their scoped folder
    match /users/{uid}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Public assets (if you use a dedicated folder)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // optional
    }
  }
}

